@model eCommerce.Models.Product

@{
    ViewData["Title"] = "Thông tin chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thông tin chi tiết</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Đơn giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsAvailable)
            {
                <div>Có sẵn</div>
            }
            else
            {
                <div>Không có sẵn</div>
            }
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Danh mục
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categories.Name)
        </dd>
        <dt class = "col-sm-2">
           Tag
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tags.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Sửa</a> |
    <a asp-action="Index">Danh sách sản phẩm</a>
</div>
